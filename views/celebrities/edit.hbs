<h2>Edit This Celebrity</h2>
{{#with celebrity}}
  <form action='/celebrities/{{_id}}/edit' method='POST'>
    <label for='name'>Name: </label>
    <input type='text' name='name' id='name' value='{{name}}' />

    <label for='name'>Occupation: </label>
    <input
      type='text'
      name='occupation'
      id='occupation'
      value='{{occupation}}'
    />

    <label for='name'>CatchPhrase: </label>
    <input
      type='text'
      name='catchPhrase'
      id='catchPhrase'
      value='{{catchPhrase}}'
    />

    <button type='submit'>Update this celebrity</button>
  </form>

  <a href='/celebrities'>Back to celebrities</a>
{{/with}}